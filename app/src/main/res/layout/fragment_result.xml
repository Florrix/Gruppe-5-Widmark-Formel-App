<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            android:background="#95FF0000"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textResultValue"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textResultWeight"
                style="@style/textStyleInput"
                android:text="@string/textWeight" />

            <TextView
                android:id="@+id/resultWeight"
                style="@style/textUnit"
                android:text="ergebnis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultHeight"
                style="@style/textStyleInput"
                android:text="@string/textHeight" />
            <TextView
                android:id="@+id/resultWeight"
                style="@style/textUnit"
                android:text="ergebnis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultGender"
                style="@style/textStyleInput"
                android:text="@string/textGender" />

            <TextView
                android:id="@+id/resultWeight"
                style="@style/textUnit"
                android:text="ergebnis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultDuration"
                style="@style/textStyleInput"
                android:text="@string/textDuration"/>
            <TextView
                android:id="@+id/resultWeight"
                style="@style/textUnit"
                android:text="ergebnis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView4"
                android:text="@string/textQuantity"
                style="@style/textStyle1"/>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            style="@style/buttonGreen"
            android:text="@string/buttonNewCalculation" />

    </LinearLayout>
</layout>